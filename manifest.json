{
  "manifest_version": 3,
  "name": "KM Matrix Automation",
  "version": "1.0",
  "description": "Automates downloading engineering drawings from Lam Research's KM Matrix system.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://kmmatrix.fremont.lamrc.net/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://kmmatrix.fremont.lamrc.net/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/inject.js"
      ],
      "matches": ["https://kmmatrix.fremont.lamrc.net/*"]
    }
  ]
} 